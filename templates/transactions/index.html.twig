{% extends 'base.html.twig' %}

{% block title %}Transactions index{% endblock %}

{% block body %}
    <h1>Transactions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MontantTransaction</th>
                <th>DateTransaction</th>
                <th>DescriptionTransaction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.montantTransaction }}</td>
                <td>{{ transaction.dateTransaction ? transaction.dateTransaction|date('Y-m-d') : '' }}</td>
                <td>{{ transaction.descriptionTransaction }}</td>
                <td>
                    <a href="{{ path('app_transactions_show', {'id': transaction.id}) }}">show</a>
                    <a href="{{ path('app_transactions_edit', {'id': transaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transactions_new') }}">Create new</a>
{% endblock %}
